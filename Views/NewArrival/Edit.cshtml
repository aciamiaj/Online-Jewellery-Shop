@model OnlineJewelleryShop.Models.Product

@{
    ViewData["Title"] = "Edit";
}
<style>
 .btn-red {
  background-color: white;
  color: #ad073d;
  border: 1px solid#ad073d;
}

.btn-red:hover {
  background-color: #ad073d;
  color: white;
  border: 1px solid #ad073d;
}

 .uneditable-label {
   background-color: lightgray;
 }
</style>

<br />
<br />
<h2>Edit Product</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control uneditable-label" readonly />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-danger btn-red" />
                <a asp-action="NewArrival" class="btn btn-outline-danger btn-red">Back to New Arrivals</a>
                <a asp-action="Products" class="btn btn-outline-danger btn-red">View All Products</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

