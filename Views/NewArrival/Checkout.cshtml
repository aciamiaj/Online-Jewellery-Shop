@model IEnumerable<OnlineJewelleryShop.Models.Cart>

@{
    ViewData["Title"] = "Checkout";
}

<style>
    .order-summary {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
    }

        .order-summary h4 {
            margin-top: 0;
        }

        .order-summary ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .order-summary li {
            margin-bottom: 10px;
        }
</style>

<br />
<br />
<div>
    <h1>Thank you for your order!</h1>

    <br />
    <div class="order-summary">
        <h5>Order Summary:</h5><br>
        @foreach (var item in ViewBag.CartItems)
        {
            <div>
                <span>@item.Product.ProductName x @item.Quantity - </span>
                <span>$@item.Total</span>
            </div>
        }
        <hr>
        <div>
            <span>Total: </span>
            <span>$@ViewBag.TotalCost</span>
        </div>
    </div>
</div>

