@using System.Security.Claims;
@{
    ViewBag.userId = User.FindFirstValue(ClaimTypes.Name);
    ViewBag.role = User.FindFirstValue(ClaimTypes.Role);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - J Jewellery Shop</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/mycss.css" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/OnlineJewelleryShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">*@
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ad073d;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="NewArrival" asp-action="NewArrival">J Jewellery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="NewArrival" asp-action="NewArrival">New Arrivals</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" asp-area="" asp-controller="Jewellery" asp-action="Jewellery" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Jewellery
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @*<li><hr class="dropdown-divider"></li>*@
                                <li><a class="dropdown-item" asp-controller="Jewellery" asp-action="Earrings"  style="color: black; background-color: white;" onmouseover="this.style.backgroundColor='#ad073d'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">Earrings</a></li>
                                <li><a class="dropdown-item" asp-controller="Jewellery" asp-action="Necklaces" style="color: black; background-color: white;" onmouseover="this.style.backgroundColor='#ad073d'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">Necklaces</a></li>
                                <li><a class="dropdown-item" asp-controller="Jewellery" asp-action="Rings" style="color: black; background-color: white;" onmouseover="this.style.backgroundColor='#ad073d'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">Rings</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" asp-area="" asp-controller="Collections" asp-action="Collections" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Collections
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @*<li><hr class="dropdown-divider"></li>*@
                                <li><a class="dropdown-item" asp-controller="Collection" asp-action="Pearl" style="color: black; background-color: white;" onmouseover="this.style.backgroundColor='#ad073d'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">Pearls</a></li>
                                <li><a class="dropdown-item" asp-controller="Collection" asp-action="Gold" style="color: black; background-color: white;" onmouseover="this.style.backgroundColor='#ad073d'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">Gold</a></li>
                                <li><a class="dropdown-item" asp-controller="Collection" asp-action="Diamonds" style="color: black; background-color: white;" onmouseover="this.style.backgroundColor='#ad073d'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">Diamonds</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex mx-3">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" asp-area="" asp-controller="NewArrival" asp-action="Products" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Register">Register</a>
                        </li>
                    </ul>
                    @*<a class="nav-link text-light mx-3" href="#">Account</a>
                    <a class="nav-link text-light mx-3" href="#">Cart</a>*@
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Login" asp-action="Logout" onmouseover="changeColor(this, 'black')" onmouseout="changeColor(this, 'white')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-person" viewBox="0 0 16 16">
                                    <title>Logout</title>
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                </svg>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="NewArrival" asp-action="ViewCart" onmouseover="changeColor(this, 'black')" onmouseout="changeColor(this, 'white')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-cart" viewBox="0 0 16 16" title="Cart">
                                    <title>Cart</title>
                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                </svg>
                            </a>
                        </li>
                    </ul>
                </div>
             </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   

    <footer class="border-top footer text-muted">
        <div class="container text-md-center">
            &copy; 2023 - JJewellery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
